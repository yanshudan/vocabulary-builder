{
    "name": "vocabulary-builder",
    "displayName": "Vocabulary Builder",
    "description": "Filter out common English words in reading/listening materials to see a list of new words. Supports adding new known words  manually on  one click.",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.66.0"
    },
    "repository": {
        "url": "https://github.com/yanshudan/vocabulary-builder",
        "type": "github"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vocabulary-builder.previewMaterial",
        "onCommand:vocabulary-builder.addToKnown"
    ],
    "icon": "",
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "view/title": [
                {
                    "command": "vocabulary-builder.addToKnown",
                    "when": "view == newWords"
                }
            ],
            "view/item/context": [
                {
                    "command": "vocabulary-builder.addToKnown",
                    "when": "viewItem == newWord"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "icon": "vocabulary-builder.svg",
                    "id": "vocabulary-builder-view",
                    "title": "Vocabulary Builder"
                }
            ]
        },
        "views": {
            "vocabulary-builder-view": [
                {
                    "id": "newWords",
                    "name": "New Words"
                },
                {
                    "id": "knownWords",
                    "name": "Known Words"
                },
                {
                    "id": "Synonyms",
                    "name": "Synonyms"
                }
            ]
        },
        "commands": [
            {
                "command": "vocabulary-builder.previewMaterial",
                "title": "Filter New Words In Material"
            },
            {
                "command": "vocabulary-builder.addToKnown",
                "title": "Add To Known Words"
            },
            {
                "command": "vocabulary-builder.lookForSyn",
                "title": "Look for synonyms of selected word"
            },
            {
                "command": "vocabulary-builder.getSampleSentences",
                "title": "Sample Sentences..."
            }
        ],
        "keybindings": [
            {
                "command": "vocabulary-builder.addToKnown",
                "key": "ctrl+shift+a"
            }
        ],
        "configuration": {
            "title": "vocabBuilderConfig",
            "properties": {
                "vocabBuilderConfig.knownWordsPath": {
                    "type": "string",
                    "scope": "window",
                    "default": "knownwords.txt",
                    "description": "File to save known words."
                },
                "vocabBuilderConfig.outPath": {
                    "type": "string",
                    "scope": "window",
                    "default": "out.txt",
                    "description": "File to save new words with translation."
                },
                "vocabBuilderConfig.translatorConfig": {
                    "type": "Map<string,string>",
                    "scope": "window",
                    "default": {
                        "key": "f054fa53741445798fbcc78bf4032d67",
                        "endpoint": "https://api.cognitive.microsofttranslator.com",
                        "location": "eastasia"
                    },
                    "description": "translator configuration"
                },
                "vocabBuilderConfig.nullChars": {
                    "type": "string",
                    "scope": "window",
                    "default": ",.:!+-—*=#$_?()&;{}<>[]%“”\"/1234567890\n",
                    "description": "Ignore charecters in text preprocessing"
                },
                "vocabBuilderConfig.synSelctor": {
                    "type": "string",
                    "scope": "window",
                    "default": "tz_su ",
                    "description": "tz_su "
                },
                "vocabBuilderConfig.classSelectors": {
                    "type": "Map<string,string[]>",
                    "scope": "window",
                    "default": {
                        "npr": [
                            "transcript",
                            "stroytext"
                        ],
                        "scientificamerican": [
                            "transcript__inner"
                        ]
                    },
                    "description": "Class names across sites"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.6.1",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "dom-parser": "^0.1.6",
        "encoding": "^0.1.13",
        "node-fetch": "^2.6.1",
        "powerthesaurus-api": "^2.0.3",
        "uuid": "^8.3.2"
    }
}
