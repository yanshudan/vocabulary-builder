{
    "name": "vocabulary-builder",
    "displayName": "Vocabulary Builder",
    "description": "Filter out common English words in reading/listening materials to see a list of new words. Supports adding new known words  manually on  one click.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vocabulary-builder.previewMaterial",
        "onCommand:vocabulary-builder.addToKnown"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vocabulary-builder.previewMaterial",
                "title": "Filter New Words In Material"
            },
            {
                "command": "vocabulary-builder.addToKnown",
                "title": "Add To Known Words"
            }
        ],
        "keybindings": [
            {
                "command": "vocabulary-builder.addToKnown",
                "key": "ctrl+shift+a"
            }
        ],
        "configuration": {
            "title": "vocabBuilderConfig",
            "properties": {
                "vocabBuilderConfig.knownWordsPath": {
                    "type": "string",
                    "scope": "window",
                    "default": "C:/workspace/vocabulary-builder/knownwords.txt",
                    "description": "File to save known words."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.6.1",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "dom-parser": "^0.1.6",
        "node-fetch": "^2.6.1"
    }
}